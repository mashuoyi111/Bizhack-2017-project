<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.ma.myapplication.Dict"
    android:background="@color/Bestbuyblue">

    <!-- Login progress -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bbuy2008" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="What can we help you with?"
            android:textAlignment="center"
            android:textColor="@color/snow"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="182dp"
        android:layout_weight="0.29">

        <EditText
            android:id="@+id/product"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter product category/keyword..."
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textColor="@color/snow"
            android:textColorHint="@color/snow"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp" />

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/snow"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_below="@+id/product"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Take a photo"
            android:textColor="@color/snow"
            android:textSize="14sp"
            android:layout_below="@+id/camera"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="0.19"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">



        <Button
            android:id="@+id/blue"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Request a Blue Shirt ➜"
            android:textSize="16sp" />

        <Button
            android:id="@+id/chat"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Live chat ➜"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="goToProduct"
            android:text="Product Lookup ➜"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
